frontend kube-api
    bind *:6443
    option tcplog
    mode tcp
    default_backend    k8s-api
    
backend k8s-api
    mode tcp
    balance    roundrobin
    default-server inter 10s downinter 5s rise 2 fall 2 slowstart 60s maxconn 250 maxqueue 256 weight 100
{% for lb in groups['lb'] %}
    server {{ lb }} {{ hostvars[lb]['ansible_default_ipv4']['address'] }}:6443 check
{% endfor %}